<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>eu.interiot.gateway.core.virtual</groupId>
		<artifactId>parent</artifactId>
		<version>0.5.1-SNAPSHOT</version>
		<relativePath>../pom.xml</relativePath>
	</parent>
	<artifactId>mw-controller</artifactId>
	<packaging>bundle</packaging>
	<description>Gateway Middleware Controller</description>

	<!-- DEPENDENCIES -->
	<dependencies>
		<dependency>
			<groupId>eu.interiot.gateway.core.common</groupId>
			<artifactId>commons</artifactId>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.freemarker</groupId>
			<artifactId>freemarker</artifactId>
			<version>2.3.26-incubating</version>
		</dependency>
		<dependency>
			<groupId>org.jodd</groupId>
			<artifactId>jodd-http</artifactId>
			<version>3.8.6</version>
		</dependency>
		<dependency>
			<groupId>org.jodd</groupId>
			<artifactId>jodd-core</artifactId>
			<version>3.8.6</version>
		</dependency>
		<dependency>
			<groupId>org.jodd</groupId>
			<artifactId>jodd-upload</artifactId>
			<version>3.8.6</version>
		</dependency>
		<dependency>
			<groupId>org.jodd</groupId>
			<artifactId>jodd-bean</artifactId>
			<version>3.8.6</version>
		</dependency>
	</dependencies>
	<build>
		<resources>
			<resource>
				<directory>src/main/resources</directory>
				<filtering>true</filtering>
			</resource>
		</resources>
		<testResources>
			<testResource>
				<directory>src/test/resources</directory>
				<filtering>true</filtering>
			</testResource>
		</testResources>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<extensions>true</extensions>
				<version>3.3.0</version>
				<configuration>
					<instructions>
						<Export-Package>eu.interiot.gateway.mwcontroller.api;jodd-http;</Export-Package>
						<Private-Package>eu.interiot.gateway.mwcontroller.*</Private-Package>
						<Bundle-Activator>eu.interiot.gateway.mwcontroller.Activator</Bundle-Activator>
						<Import-Package>
							org.osgi.framework,
							eu.interiot.gateway.*,
							org.apache.logging.log4j,
							freemarker.template,
							javax.swing.tree,
							jodd.http
						</Import-Package>
						<!-- <Embed-Dependency> jodd-http;scope=provided;inline=true; jodd-core;scope=provided;inline=true; 
							jodd-upload;scope=provided;inline=true; </Embed-Dependency> <Embed-Transitive>true</Embed-Transitive> -->
					</instructions>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>